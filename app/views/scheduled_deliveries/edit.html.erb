<% content_for(:title, "Edit #{@scheduled_delivery.shopping_list.name}") %>

<p><%= link_to MaterialIcon.new(icon: :arrow_left).render + @shopping_list.name, @shopping_list %></p>

<h1>Editing <%= @scheduled_delivery.scheduled_for.to_fs(:timestamp) %></h1>

<%= render 'form', scheduled_delivery: @scheduled_delivery, shopping_list: @shopping_list %>

<%= render partial: 'shared/delete_footer', locals: { object: @scheduled_delivery, delete_path: shopping_list_scheduled_delivery_path(@shopping_list, @scheduled_delivery) } %>
