<div class="right"><%= link_to 'New Meal Plan', new_meal_plan_path, class: button_classes %></div>

<h1>Meal Plans</h1>

<ul>
  <% @meal_plans.each do |plan| %>
    <li>
      <h3><%= link_to "#{l plan.start_date, format: :month_as_text}", meal_plan_path(plan) %></h3>
      <p><%= display_recipes(plan) %></p>
    </li>
  <% end %>
</ul>
