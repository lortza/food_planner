<%= form_tag(recipes_path, :method => "get", id: 'search-form', class: 'd-flex align-items-center' ) do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Recipes", class: 'form-control form-control-sm me-2' %>
  <%= MaterialIcon.new(icon: :search, size: :xlarge).render %>
<% end %>
