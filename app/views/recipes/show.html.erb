<div class="right"><%= link_to 'Edit', edit_recipe_path(@recipe), class: button_classes %></div>

<h1><%= @recipe.title %></h1>
<p>Source: <%= link_to @recipe.source_name, @recipe.source_url, target: '_blank' %></p>
<ul>
  <li>Servings: <%= @recipe.servings %></li>
  <li>Prep Time: <%= display_minutes(@recipe.prep_time) %></li>
  <li>Cook Time: <%= display_minutes(@recipe.cook_time) %></li>
  <li>Total Time: <%= display_minutes(@recipe.total_time) %></li>
</ul>

<h3>Ingredients</h3>
<ul>
  <% @recipe.ingredients.each do |ingredient| %>
    <li><%= ingredient_display(ingredient) %></li>
  <% end %>
</ul>

<h3>Instructions</h3>
<ol>
  <%= simple_format(@recipe.instructions, {}, wrapper_tag: 'li') %>
</ol>
