// Reveal aisle
document.getElementById("<%= dom_id(@shopping_list_item.aisle) %>").classList.remove('hidden');

// Remove crossed-off item
document.getElementById("<%= dom_id(@shopping_list_item) %>").remove();

// Insert item back in aisle
document.getElementById("<%= dom_id(@shopping_list_item.aisle) %>").insertAdjacentHTML('beforeend', "<%= escape_javascript(render partial: '/shopping_list_items/shopping_list_item', locals: { item: @shopping_list_item }) %>");
