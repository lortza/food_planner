<% content_for(:title, @shopping_list.name) %>

<p><%= link_to MaterialIcon.new(icon: :arrow_left).render + 'Shopping Lists', shopping_lists_path %></p>

<header class="d-flex justify-content-between align-items-center">
  <h1><%= @shopping_list.name %></h1>
  <div class='d-flex align-items-center'>
    <%= link_to MaterialIcon.new(icon: :truck, size: :xxlarge, classes: '').render, new_shopping_list_scheduled_delivery_path(@shopping_list), title: 'Schedule an upcoming delivery', class: "mr-2" %>
    <%= link_to MaterialIcon.new(icon: :sync, size: :xxlarge, classes: '').render, @shopping_list %>
  </div>
</header>

<article class='index-item'>
  <%= form_tag(search_shopping_list_path(@shopping_list), method: 'get', id: 'search-form' ) do %>
    <div class="col-xs-12">
      <%= text_field_tag :search, params[:search], list: 'name', placeholder: 'Find or Add an item...', class: 'form-control form-control-sm' %>
      <datalist id="name">
        <option value="  "></option>
        <% @shopping_list.items.each do |item| %>
          <option id="<%= item.id %>" value="<%= item.name %>"></option>
        <% end %>
      </datalist>
    </div>
  <% end %>
</article>

<%= render 'scheduled_deliveries/scheduled_deliveries', shopping_list: @shopping_list %>

<section id='active-items'>
  <% @shopping_list.shopping_list_items.not_purchased.by_aisle_order_number.group_by(&:aisle).each do |aisle, items| %>
    <% if aisle %>
      <h4 class='aisle'><%= aisle.name %></h4>
      <% items.each do |item| %>
        <article id='<%= item.id %>' class='index-item'>
          <div class='shopping-list-item controls-on-right-parent'>
            <span>
              <%= link_to display_item(item), deactivate_item_path(id: item.id), class: 'js-toggle', method: :post, remote: true %>
              <%= display_in_cart_status(item) %>
            </span>
            <span class='controls'>
              <%= render partial: 'scheduled_deliveries/toggle_icons', locals: { item: item, shopping_list: @shopping_list } %>
              <%= link_to MaterialIcon.new(icon: :settings, title: 'Edit item').render,
                edit_shopping_list_shopping_list_item_path(@shopping_list, item) %>
            </span>
          </div>
        </article>
      <% end %><!-- each -->
    <% end %><!-- if aisle -->
  <% end %>
</section>

<h4 class='aisle'>Crossed Off</h4>
<section id='inactive-items'>
  <% @shopping_list.shopping_list_items.inactive.by_recently_edited.limit(30).each do |item| %>
    <article id='<%= item.id %>' class='index-item item-crossed-off'>
      <p class='shopping-list-item '>
        <%= link_to display_item(item), activate_item_path(id: item.id), class: 'js-toggle', method: :post, remote: true %>
        <span class='float-right'>
          <%= render partial: 'scheduled_deliveries/toggle_icons', locals: { item: item, shopping_list: @shopping_list } %>
          <%= link_to MaterialIcon.new(icon: :settings, title: 'Edit item').render, edit_shopping_list_shopping_list_item_path(@shopping_list, item) %>
        </span>
      </p>
    </article>
  <% end %>
</section>

<script type='text/javascript'>
  shoppingListItemToggler();
</script>
