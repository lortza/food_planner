<%= form_tag(user_recipes_path(@user), :method => "get", id: 'search-form', class: 'form-inline my-2 my-lg-0' ) do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Recipes", class: 'form-control mr-sm-2' %>
  <%= submit_tag "Search", :name => nil, class: 'btn btn-outline-success my-2 my-sm-0' %>
<% end %>
