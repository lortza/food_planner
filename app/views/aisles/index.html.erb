<% content_for(:title, 'Aisles') %>

<h1>
  <%= link_to "", new_aisle_path, class: Icon.plus %>
  Aisles
</h1>

<% if current_user.aisles.any? %>

  <% @aisles.each do |aisle| %>
    <h3 class='index-item controls-on-right-parent'>
      <%= aisle.order_number %> | <%= aisle.name %> <span style="font-size: 1rem;"></span>
      <span class='controls'>
        <%= link_to "", aisle, method: :delete, data: { confirm: 'Are you sure? This action cannot be undone.' }, class: Icon.delete %>
        <%= link_to "", edit_aisle_path(aisle), class: Icon.edit %>
      </span>
    </h3>
  <% end %>

<% else %>
  <p>Create a New Aisle</p>
  <%= link_to 'New Aisle', new_aisle_path, class: button_classes('primary btn-wide') %>
<% end %>
