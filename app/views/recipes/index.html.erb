<div class="right"><%= link_to 'New Recipe', new_recipe_path, class: button_classes %></div>

<h1>Recipe Index</h1>

<table class="table table-sm">
  <thead>
    <tr>
      <th>Title</th>
      <th>Servings</th>
      <th>Source</th>
      <th>Ingredients</th>
      <th>Meal Plans</th>
      <th>Last Prepared</th>
    </tr>
  </thead>
  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= link_to recipe.title, recipe_path(recipe) %></td>
        <td><%= recipe.servings %></td>
        <td><%= link_to recipe.source_name, recipe.source_url %></td>
        <td><%= recipe.ingredients.count %></td>
        <td><%= recipe.meal_plans.count %></td>
        <td><%= recipe.last_prepared %></td>
      </tr>
    <% end %>
  </tbody>
</table>
