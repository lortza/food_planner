<h1>Shopping Lists</h1>

<% if current_user.shopping_lists.any? %>
  <%= render partial: 'shared/search_form', locals: { url: shopping_lists_path } %>

  <% @shopping_lists.each do |shopping_list| %>
    <article class='list'>
      <h3>
        <%= link_to shopping_list.name, shopping_list_path(shopping_list) %>
        <span class='list-actions right'>
          <%= link_to 'edit', edit_shopping_list_path(shopping_list) %> |
          <%= link_to 'delete', shopping_list, method: :delete, data: { confirm: 'Are you sure? This action cannot be undone.' } %>
        </span>
      </h3>
    </article>
  <% end %>

<% else %>
  <p>Create a New Shopping List</p>
  <%= link_to 'New Shopping List', new_shopping_list_path, class: button_class('primary btn-wide') %>
<% end %>
